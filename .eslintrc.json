{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": ["prettier", "airbnb-base", "plugin:prettier/recommended"],
    "plugins": ["prettier"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.js"
        ]
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "prettier/prettier": "error",
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": true
        }
      ]
    }
  }